{
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "es6",
    "module": "commonjs",
    "incremental": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,

    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }],

    "paths": {
      "generated:*": ["../src/__generated__/*"],
      "~/*": ["./*"]
    }
  },
  "files": ["src/global.d.ts", "./src/index.ts"],
  "include": ["src/global.d.ts", "src/**/*"]
}
